<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/utilityColorPrimary"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="edu.utdallas.hpews.PuzzleActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WordPuzzleLayout"
        android:layout_weight="1">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/WordPuzzle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth">
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SolutionBankLayout"
        android:layout_weight="1">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/SolutionBank"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:numColumns="4"
            android:background="@color/utilityColorPrimary"
            android:stretchMode="columnWidth">
        </GridView>
    </LinearLayout>

</LinearLayout>
